@model AdminX.ViewModels.MergeHistoryVM


<div class="container">
    <div class="row mb-5 g-5">
        <h1 class="text-center">Merge history</h1>
    </div>
    <div class="row mb-5 g-5">
        <form asp-action="Search">
            <div class="row mb-5 g-5">
                <div class="col-md-2 text-end">
                    <label>Old file number:</label>
                </div>
                <div class="col-md-2">
                    <input name="oldFileNo" /> 
                </div>
                <div class="col-md-2 text-end">
                    <label>New file number:</label>
                </div>
                <div class="col-md-2">
                    <input name="newCGUNo" />
                </div>
                <div class="col-md-2 text-end">
                    <label>NHS No:</label>
                </div>
                <div class="col-md-2">
                    <input name="nhsNo" />
                </div>
            </div>
            <div class="row mb-5 g-5">
                <div class="col-md-2 text-end">
                    <label>First name:</label>
                </div>
                <div class="col-md-2">
                    <input name="firstName" />
                </div>
                <div class="col-md-2 text-end">
                    <label>Last name:</label>
                </div>
                <div class="col-md-2">
                    <input name="lastName" />
                </div>
                <div class="col-md-2 text-end">
                    <label>Date of birth:</label>
                </div>
                <div class="col-md-2">
                    <input type="date" name="dob" />
                </div>

            </div>

            <div class="row mb-5 g-5">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-default btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
    @if(Model.message != null && Model.message != "")
    {
        <h2>@Model.message</h2>
    }
    else
    {
        @if(Model.mergeHistory != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Old pedigree</th>
                        <th>New pedigree</th>
                        <th>Patient</th>
                        <th>Merge type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.mergeHistory)
                    {
                        <tr>
                            <td>@item.OldPedigreeNumber</td>
                            <td>@item.NewPedigreeNumber</td>
                            <td>@item.PatientName</td>
                            <td>@item.Type</td>
                        </tr>
                    }
                </tbody>            
            </table>
        }
    }
</div>