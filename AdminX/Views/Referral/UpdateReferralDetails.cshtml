            let associatedFacilityIndex = -1;
            for (let i = 0; i < referrerCodes.length; i++) 
            {
                if (referrerCodes[i] === selectedReferrerCode) 
                {                    
                    associatedFacilityIndex = i;
                    break;
                }
            }

            if (associatedFacilityIndex !== -1) 
            {                
                let fullDetails = facilityNameArray[associatedFacilityIndex] + ", " +
                    facilityAddressArray[associatedFacilityIndex] + ", " +
                    facilityCityArray[associatedFacilityIndex] + ", " +
                    facilityStateArray[associatedFacilityIndex] + " " +
                    facilityPostcodeArray[associatedFacilityIndex];

                facilityDetails.value = fullDetails;
            } 
            else 
            {
                facilityDetails.value = "";
            }
            */
        }

        function CalculateClockAge()
        {
            var clockStart = Date.parse(document.getElementById("ClockStartDate").value);
            var clockStop = Date.parse(document.getElementById("ClockStopDate").value);            
            var clockAge;
            var today = new Date();            
                       

            if(clockStop != null)
            {               
                clockAge = clockStop - clockStart;
            }
            else
            {               
                clockAge = today - clockStart;
            }
            
            var clockAgeDays = ((clockAge / 1000) / 3600) / 24;
            document.getElementById("clockage").value = clockAgeDays + " days (" + Math.ceil(clockAgeDays/7) + " weeks)";
        }

    refCode.addEventListener("change", updateFacility);

    updateFacility();
    CalculateClockAge();
</script>

