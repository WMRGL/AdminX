<script>

    var refCode;
    var facilityDetails;
   
    if("@Model.referral.PATHWAY".startsWith("General"))
    {
        refCode = document.getElementById("referrerCodeG");
        facilityDetails = document.getElementById("facilityFullDetailsG");
        
    }
    else
    {
        refCode = document.getElementById("referrerCodeC");
        facilityDetails = document.getElementById("facilityFullDetailsC");        
    }


        

    

    function updateFacility() 
    {
        if (!refCode || !facilityDetails) return;

        var facilityCodeArray = [];
        var facilityNameArray = [];
        var facilityAddressArray = [];
        var facilityCityArray = [];
        var facilityStateArray = [];
        var facilityPostcodeArray = [];

        var referrerCodes = [];
        var facCodeArray = []; // Maps Referrer -> Facility Code
        var facCode;

        // Populate Data Arrays
        @foreach (var item in Model.facilities)
        {
                @:facilityCodeArray.push("@item.MasterFacilityCode");
                @:facilityNameArray.push("@item.NAME");
                @:facilityAddressArray.push("@item.ADDRESS");
                @:facilityCityArray.push("@item.CITY");
                @:facilityStateArray.push("@item.STATE");
                @:facilityPostcodeArray.push("@item.ZIP");
        }

        @foreach (var item in Model.referrers)
        {
                @:referrerCodes.push("@item.MasterClinicianCode");
                @:facCodeArray.push("@item.MasterFacilityCode");
        }

        // Handle GP Selection
        if (refCode.value == "@Model.patient?.GP_Code") {
            let fullDetails = "@Model.GPFacility.NAME" + ", " +
                "@Model.GPFacility.ADDRESS" + ", " +
                "@Model.GPFacility.CITY" + ", " +
                "@Model.GPFacility.STATE" + " " +
                "@Model.GPFacility.ZIP";

            facilityDetails.value = fullDetails;
        }
        else {
           
            for (var i in referrerCodes) {
                if (referrerCodes[i] == refCode.value) {
                    facCode = facCodeArray[i];
                    break;
                }
            }

            facilityDetails.value = ""; 
            for (var i in facilityCodeArray) {
                if (facilityCodeArray[i] == facCode) {
                    let fullDetails = facilityNameArray[i] + ", " +
                        facilityAddressArray[i] + ", " +
                        facilityCityArray[i] + ", " +
                        facilityStateArray[i] + " " +
                        facilityPostcodeArray[i];

                    facilityDetails.value = fullDetails.replace("&#x27;", "'");
                    break;
                }
            }
        }
    }

    function CalculateClockAge() 
    {
        var clockStart;
        var clockStop;
        var clockAgeTotal;

        if("@Model.referral.PATHWAY".startsWith("General"))
        {
            clockStart = Date.parse(document.getElementById("ClockStartDateG").value);
            clockStop = Date.parse(document.getElementById("ClockStopDateG").value);
            clockAgeTotal = document.getElementById("clockageG");
        }
        else
        {
            clockStart = Date.parse(document.getElementById("ClockStartDateC").value);
            clockStop = Date.parse(document.getElementById("ClockStopDateC").value);
            clockAgeTotal = document.getElementById("clockageC");
        }
        
        var clockAge;
        var today = new Date();        


        if (isNaN(clockStop)) 
        {   
            clockAge = today - clockStart;            
        }
        else 
        {   
            clockAge = clockStop - clockStart;
        }
        var clockAgeDays = ((clockAge / 1000) / 3600) / 24;
        clockAgeTotal.value = Math.floor(clockAgeDays) + " days (" + Math.ceil(clockAgeDays / 7) + " weeks)";
    }

    function SetToGP(pathway)
    {
        var _referrerList;        

        if(pathway == "cancer")
        {
            _referrerList = document.getElementById("referrerCodeC");            
        }
        else
        {
            _referrerList = document.getElementById("referrerCodeG");           
        }

        const newCode = "@Model.patient.GP_Code";               

        _referrerList.value = newCode;
                
        _referrerList.choices.setChoiceByValue(newCode);
        updateFacility();

    }
        

    refCode.addEventListener("change", updateFacility);

    updateFacility();
    CalculateClockAge();
    
</script>

