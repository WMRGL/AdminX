@model AdminX.ViewModels.DiaryVM
@{
    ViewData["Title"] = "Admin-X - Diary Details";
    ViewData["Page"] = "/ Patient / Diary Details";
    ViewData["HomeBtn"] = Html.ActionLink("Back to Home Page", "Index", "Home", new { }, new { @class = "btn btn-primary m-1" });
}

@{
    ViewBag.HomeButton = new[]
    {
        Html.ActionLink("Patient Details", "PatientDetails", "Patient", new { id = Model.patient.MPI }, new { @class = "btn btn-light bg-white me-2 m-1" }),
       Html.ActionLink("Back to Entry", "DiaryDetails", "Diary", new { id = Model.diary.DiaryID }, new { @class = "btn btn-light bg-white me-2 m-1" }),
    };
}

<div class="row">
    <div class="col-md-12 col-xl-12">

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">New Diary Entry</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input name="diaryID" asp-for=@Model.diary.DiaryID hidden />
                    <div class="mb-3 row">
                        <label class="col-form-label col-sm-1 ">Diary Date</label>
                        <div class="col-sm-11">
                            <input type="date" name="diaryDate" class="form-control" asp-for=@Model.diary.DiaryDate />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-form-label col-sm-1 ">Action Code</label>
                        <div class="col-sm-11">
                            <select name="diaryAction" class="form-select js-choice" asp-for=@Model.diary.DiaryAction>
                                <option value="">Select</option>
                                @foreach (var item in Model.diaryActionsList)
                                {
                                    @if (item.Action != null)
                                    {
                                        <option value=@item.ActionCode>@item.ActionCode - @item.Action</option>
                                    }
                                    else
                                    {
                                        <option value=@item.ActionCode>@item.ActionCode</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-form-label col-sm-1 ">DocCode</label>
                        <div class="col-sm-11">
                            <select name="docCode" class="form-select js-choice" asp-for=@Model.diary.DocCode>
                                <option value="">Select</option>
                                @foreach (var item in Model.documentsList)
                                {
                                    <option value=@item.DocCode>@item.DocCode- @item.DocName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-form-label col-sm-1 ">Referral</label>
                        <div class="col-sm-11">
                            <select name="refID" class="form-select js-choice" asp-for=@Model.diary.RefID>
                                @foreach (var item in Model.referralsList)
                                {
                                    <option value=@item.refid>@item.refid - @item.RefType, @item.RefDate</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-form-label col-sm-1 ">Diary Text</label>
                        <div class="col-sm-11">
                            <input name="diaryText" class="form-control" asp-for=@Model.diary.DiaryText />
                        </div>
                    </div>
             

                    <div class="row mb-5 g-5">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-default btn-primary">Save</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>

  
</div>