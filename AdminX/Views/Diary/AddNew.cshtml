@model AdminX.ViewModels.DiaryVM
@{
    ViewData["Title"] = "Admin-X - Diary Details";
    ViewData["Page"] = "/ Patient / Diary Details";
    ViewData["HomeBtn"] = Html.ActionLink("Back to Home Page", "Index", "Home", new { }, new { @class = "btn btn-primary m-1" });
}


@{
    ViewBag.HomeButton = new[]
    {
        Html.ActionLink("Patient Details", "PatientDetails", "Patient", new { id = Model.patient.MPI }, new { @class = "btn btn-light bg-white me-2 m-1" }),
    };
}

<div class="row">
    <div class="col-md-3 col-xl-2">

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">New Diary Entry</h5>
            </div>
        </div>
    </div>
    @if(Model.referralsList.Count != 0)
    {
    <form asp-action="AddNew" asp-controller="Diary">
        <div class="row mb-5 g-5">
        
            <div class="col-md-1">
                <label>Diary Date:</label>
            </div>
            <div class="col-md-2">
                <input type="date" name="diaryDate" class="w-100" value=@DateTime.Today.ToString("yyyy-MM-dd") />
            </div>
            @*
            <div class="col-md-1">
                <label>Diary With:</label>
            </div>
            <div class="col-md-2">
                <select name="diaryWith" asp-for=@Model.currentStaffUser.STAFF_CODE>
                    <option value="">Select</option>
                    @foreach(var item in Model.staffList)
                    {
                        <option value=@item.STAFF_CODE>@item.NAME</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <label>Consultant:</label>
            </div>
            <div class="col-md-2">
                <select name="diaryCons" class="w-100">
                    <option value="">Select</option>
                    @foreach (var item in Model.clinicians)
                    {
                        <option value=@item.STAFF_CODE>@item.NAME</option>
                    }
                </select>
            </div>
            *@
            <div class="col-md-1">
                <label>Action Code:</label>
            </div>
            <div class="col-md-2">
                <select name="diaryAction" class="w-100">
                    <option value="">Select</option>
                    @foreach (var item in Model.diaryActionsList)
                    {
                        @if(item.Action != null)
                        {
                            <option value=@item.ActionCode>@item.ActionCode - @item.Action</option>
                        }
                        else
                        {
                            <option value=@item.ActionCode>@item.ActionCode</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row mb-5 g-5">
            <div class="col-md-1">
                DocCode:
            </div>
            <div class="col-md-6">
                <select name="docCode" class="w-100">
                    <option value="">Select</option>
                    @foreach (var item in Model.documentsList)
                    {
                        <option value=@item.DocCode>@item.DocCode- @item.DocName</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                Referral:
            </div>
            <div class="col-md-2">
                <select name="refID" class="w-100" asp-for=@Model.defaultRef.refid>
                    <option value="">Select</option>
                    @foreach (var item in Model.referralsList)
                    {
                        <option value=@item.refid>@item.refid - @item.RefType, @item.RefDate</option>
                    }
                </select>                
            </div>
        </div>

        <div class="row mb-5 g-5">
            <div class="col-md-1">
                DiaryText:
            </div>
            <div class="col-md-8">
                <input name="diaryText" class="w-100" />
            </div>        
        </div>

        <div class="row mb-5 g-5">
            <div class="col-md-2">
                <button type="submit" class="btn btn-default btn-primary">Save</button>
            </div>
        </div>

    </form>
    }
    else
    {
        <label>There are no active referrals, you will not be able to save this diary entry!</label>
    }
</div>