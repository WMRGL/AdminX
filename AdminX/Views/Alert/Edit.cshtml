@model AdminX.ViewModels.AlertVM

@{
    ViewData["Title"] = "Admin-X - Alert";
    ViewData["Page"] = "/ Alert / Edit";
    ViewData["HomeBtn"] = Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-primary m-1" });
}

@{
    ViewBag.HomeButton = new[]
    {
        Html.ActionLink("Patient Details", "PatientDetails", "Patient", new { id = Model.patient.MPI }, new { @class = "btn btn-light bg-white me-2 m-1", id = "btnEditPatient" }),
        Html.ActionLink("Back to Alert Details", "AlertDetails", "Alert", new { alertID = Model.alert.AlertID }, new { @class = "btn btn-light bg-white me-2 m-1", id = "btnAlertIndex" }),
        Html.ActionLink("Alerts List", "Index", "Alert", new { mpi = Model.patient.MPI }, new { @class = "btn btn-light bg-white me-2 m-1", id = "btnAlertIndex" }),
    };
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3>Alert details for <a asp-controller="Patient" asp-action="PatientDetails" asp-route-id=@Model.patient.MPI>@Model.patient.FIRSTNAME @Model.patient.LASTNAME (@Model.patient.CGU_No)</a></h3>
        </div>
        <div class="card-body">
            <div class="row mb-5 mt-2">
                <form asp-action="Edit">
                    <input name="alertID" asp-for=@Model.alert.AlertID hidden />

                    <div class="row g-3 align-items-center">
                        <div class="col-sm-1">
                            <label class="col-form-label text-sm-end">Alert Type</label>
                        </div>
                        <div class="col-sm-9">
                            <select class="form-select" name="alertType" asp-for=@Model.alert.AlertType>
                                <option value="" selected>Select</option>
                                @foreach (var item in Model.alertTypes)
                                {
                                    <option value=@item.AlertType>@item.AlertType</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row g-3 align-items-center mt-1">
                        <div class="col-sm-1">
                            <label for="EffectiveFromDate" class="col-form-label text-sm-end">Effective</label>
                        </div>
                        <div class="col-auto">
                            <span class="form-control-plaintext">@Model.alert.EffectiveFromDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="col-auto">
                            <label for="txtEndDate" class="col-form-label">-</label>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" type="date" name="endDate" id="txtEndDate" asp-for="@Model.alert.EffectiveToDate" />
                        </div>
                        <div class="col-auto">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="chkEndDate" />
                                <label class="form-check-label" for="chkEndDate">Set end date to today</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 align-items-center mt-1">
                        <div class="col-sm-1">
                            <label class="col-form-label text-sm-end">Protected Address</label>
                        </div>
                        <div class="col-sm-9">
                            <select class="form-select" name="isProtectedAddress" asp-for=@Model.alert.ProtectedAddress>
                                <option value=false selected>No</option>
                                <option value=true>Yes</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3 align-items-center mt-1">
                        <div class="col-sm-1">
                            <label class="col-form-label text-sm-end">Comments</label>
                        </div>
                        <div class="col-sm-9">
                            <textarea class="form-control" name="comments" rows=3 asp-for=@Model.alert.Comments></textarea>
                        </div>
                    </div>

               
                <div class="row mb-5 g-5">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-default btn-outline-primary">Save</button>
                    </div>
                </div>

                </form>
            </div>



        </div>
    </div>
</div>

<script>

    document.getElementById("chkEndDate").addEventListener("change", SetEndDate);

    function SetEndDate()
    {
        if(document.getElementById("chkEndDate").checked)
        {
            document.getElementById("txtEndDate").valueAsDate = new Date();
        }
        else
        {
            document.getElementById("txtEndDate").value = "";
        }
    }

</script>