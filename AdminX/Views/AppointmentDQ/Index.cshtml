@model AdminX.ViewModels.DiscrepancyReportVM
@{
    ViewData["Title"] = "Discrepancy Reports";
}

<h1>@ViewData["Title"]</h1>
<p>This page shows appointment discrepancies between the CGUDB and EPIC systems.</p>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Select Date Range</h4>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" class="row row-cols-md-auto align-items-center">
					<div class="col-12">
                        <label class="visually-hidden" for="startDate">Start Date</label>
                        <input type="date" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control  mb-2 me-sm-2" />

                    </div>

					<div class="col-12">
						<label class="visually-hidden" for="inlineFormInputGroupUsername2">Username</label>
						<div class="input-group mb-2 me-sm-2">
							<div class="visually-hidden">End Date</div>
                            <input type="date" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control  mb-2 me-sm-2" />
						</div>
					</div>

					<div class="col-12">
						<button type="submit" class="btn btn-primary mb-2">Submit</button>
					</div>
				</form>

            </div>
        </div>
    </div>

</div>



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-dark">CGUDB Not In EPIC Report</h4>
            </div>
            <div class="card-body">
                @if (Model.CgudbResults.Any())
                {
                    <table class="table table-striped table-bordered defaultTable">
                        <thead class="thead-dark table-dark">
                            <tr>
                                <th>Name</th>
                                <th>NHS No.</th>
                                 <th>Date</th>
                                <th>Time</th>
                                <th>Type</th>
                                <th>Clin Code</th>
                                <th>Location</th>
                                <th>Clinician</th>
                                <th>Duration</th>
                                <th>Attendance</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CgudbResults)
                            {
                                <tr>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.SocialSecurity</td>
                                    <td>@item.BookedDate.ToShortDateString()</td>
                                   <td>@item.BookedTime.ToString("t")</td>
                                    <td>@item.Type</td>
                                    <td>@item.Facility</td>
                                    <td>@item.Location</td>
                                    <td>@item.CliniciansName</td>
                                    <td>@item.EstDurationMins</td>
                                    <td>@item.Attendance</td> 

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                  <div class="alert alert-danger alert-outline-coloured alert-dismissible" role="alert">
                    <div class="alert-icon">
                        <i class="far fa-fw fa-bell"></i>
                    </div>
                    <div class="alert-message">
                        No discrepancies found in CGUDB for the selected date range.
                    </div>
                </div>
                   
                }
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-dark">EPIC Not In CGUDB Report</h4>
            </div>
            <div class="card-body">
                @if (Model.EpicResults.Any())
                {
                    <table class="table table-striped table-bordered defaultTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>NHS Number</th>
                                <th>Appointment Date</th>
                                <th>Appointment Time</th>
                                @* <th>Location</th> *@
                                <th>Clinic Name</th>
                                <th>Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.EpicResults)
                            {
                                <tr>
                                    <td>@item.Forename @item.Surname</td>
                                    <td>@item.NHSNo</td>
                                    <td>@item.AppointmentDate.ToShortDateString()</td>
                                    <td>@item.AppointmentTime.ToString("t")</td>
                                    @* <td>@item.AppointmentLocation</td> *@
                                    <td>@item.ClinicName</td>
                                    <td>@item.AppointmentAttendance</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger alert-outline-coloured alert-dismissible" role="alert">
                        <div class="alert-icon">
                            <i class="far fa-fw fa-bell"></i>
                        </div>
                        <div class="alert-message">
                            No discrepancies found in EPIC for the selected date range.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
