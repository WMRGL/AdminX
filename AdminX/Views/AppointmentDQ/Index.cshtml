@model AdminX.ViewModels.DiscrepancyReportVM
@{
    ViewData["Title"] = "Discrepancy Reports";
}

<h1>@ViewData["Title"]</h1>
<p>This page shows appointment discrepancies between the CGUDB and EPIC systems.</p>
<hr />

<form asp-action="Index" method="post" class="form-inline mb-4">
    <div class="form-group mr-2">
        <label for="startDate" class="mr-2">Start Date:</label>
        <input type="date" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="form-group mr-2">
        <label for="endDate" class="mr-2">End Date:</label>
        <input type="date" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter Reports</button>
</form>

<!-- Report 1: CGUDB Not In EPIC -->
<div class="mt-5">
    <h3>CGUDB Not In EPIC Report</h3>
    <p>Appointments in CGUDB that are missing from EPIC.</p>

    @if (Model.CgudbResults.Any())
    {
        <table class="table table-sm table-striped table-bordered dataTable">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>NHS No.</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Type</th>
                    <th>Clinic Code</th>
                    <th>Location</th>
                    <th>Clinician's Name</th>
                    <th>Duration</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CgudbResults)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.SocialSecurity</td>
                        <td>@item.BookedDate.ToShortDateString()</td>
                        <td>@item.BookedTime.ToString("t")</td>
                        <td>@item.Type</td>
                        <td>@item.Facility</td>
                        <td>@item.Location</td>
                        <td>@item.CliniciansName</td>
                        <td>@item.EstDurationMins</td>
                        <td>@item.Attendance</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No discrepancies found in CGUDB for the selected date range.
        </div>
    }
</div>


<!-- Report 2: EPIC Not In CGUDB -->
<div class="mt-5">
    <h3>EPIC Not In CGUDB Report</h3>
    <p>Appointments in EPIC that are missing from CGUDB.</p>

    @if (Model.EpicResults.Any())
    {
        <table class="table table-sm table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>NHS Number</th>
                    <th>Appointment Date</th>
                    <th>Appointment Time</th>
                    <th>Location</th>
                    <th>Clinic Name</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EpicResults)
                {
                    <tr>
                        <td>@item.Forename</td>
                        <td>@item.Surname</td>
                        <td>@item.NHSNo</td>
                        <td>@item.AppointmentDate.ToShortDateString()</td>
                        <td>@item.AppointmentTime.ToString("t")</td>
                        <td>@item.AppointmentLocation</td>
                        <td>@item.ClinicName</td>
                        <td>@item.AppointmentAttendance</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No discrepancies found in EPIC for the selected date range.
        </div>
    }
</div>