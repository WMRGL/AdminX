@model AdminX.ViewModels.ReferralListVM
@{
    ViewData["Title"] = "Admin-X - Referral List";
    ViewData["Page"] = " Referral List";
}

<h2>@ViewData["Page "]</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title text-dark"> New Unassigned Referrals</h3>
    </div>
    <div class="card-body">
        @if (Model.referralList.Count > 0)
        {
            <table class="table table-responsive table-bordered table-striped defaultTable">
                <thead class="table-dark">
                    <tr>
                        <th>CGU number</th>
                        <th>Patient Name</th>
                        <th>Pathway</th>
                        <th>Referral type</th>
                        <th>Referral Date</th>
                        <th>Referred By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.referralList)
                    {
                        <tr>
                            <td><a asp-controller="Referral" asp-action="ProcessNewReferral" asp-route-refID=@item.refid>@item.CGU_No</a></td>
                            <td>@item.FIRSTNAME @item.LASTNAME</td>
                            <td>@item.PATHWAY</td>
                            <td>@item.RefType</td>
                            @if (item.RefDate.HasValue)
                            {
                                <td>@item.RefDate.Value.ToString("dd/MM/yyyy")</td>
                            }
                            else
                            {
                                <td>N/A</td>
                            }
                            <td>@item.ReferringClinician - @item.ReferringFacility</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>There are no new referrals awaiting assignment.</h2>
        }
    </div>
</div>

